# Application Configuration
APP_NAME=researcher-pro
APP_ENV=development  # development, staging, production
DEBUG=true
LOG_LEVEL=debug  # debug, info, warning, error, critical

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true  # Set to false in production

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/researcher_pro
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# Security
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# API Keys
OPENAI_API_KEY=your-openai-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_BACKGROUND_TASKS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# Rate Limiting
RATE_LIMIT_WINDOW=60  # seconds
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600  # seconds
CACHE_MAX_SIZE=1000
CACHE_KEY_PREFIX=researcher_pro

# Background Tasks
TASK_QUEUE_NAME=tasks
MAX_TASK_RETRIES=3
TASK_RETRY_DELAY=60  # seconds
TASK_TIMEOUT=300  # seconds

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
SENTRY_DSN=your-sentry-dsn

# Logging
LOG_FORMAT=json  # json or text
LOG_FILE=logs/app.log
LOG_ROTATION=1d
LOG_RETENTION=30d

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com

# Storage
STORAGE_TYPE=local  # local or s3
STORAGE_PATH=storage/
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_BUCKET_NAME=your-bucket-name

# Testing
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/researcher_pro_test
MOCK_EXTERNAL_SERVICES=true
SKIP_API_CALLS=true

# Documentation
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json
DOCS_TITLE="Researcher Pro API"
DOCS_DESCRIPTION="AI-driven research and analysis platform"
DOCS_VERSION="1.0.0"

# Development Tools
ENABLE_DEBUG_TOOLBAR=true
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# System Resources
MAX_MEMORY_MB=1024
MAX_CPU_PERCENT=80
DISK_USAGE_THRESHOLD=90

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System under maintenance"
BACKUP_ENABLED=true
BACKUP_FREQUENCY=1d
BACKUP_RETENTION=30d

# Notifications
ENABLE_NOTIFICATIONS=true
NOTIFICATION_CHANNEL=email  # email, slack, or both
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Performance
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
MIN_COMPRESSION_SIZE=1024  # bytes

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000  # 1 year
CSP_ENABLED=true
CSP_POLICY="default-src 'self'"

# Remember to:
# 1. Never commit actual .env file
# 2. Keep secrets secure
# 3. Use different values for different environments
# 4. Regularly rotate secrets and keys
# 5. Monitor environment variable usage
